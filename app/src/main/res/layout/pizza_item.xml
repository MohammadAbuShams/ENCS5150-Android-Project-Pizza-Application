<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_pizzaItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/favLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/plaintext_grey_theme"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pizzaImage"
            android:layout_width="200dp"
            android:layout_height="152dp"
            android:layout_weight="2"
            android:background="?attr/selectableItemBackgroundBorderless"/>


        <ImageButton
            android:id="@+id/imgFav"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#E7E2E2"
            app:srcCompat="@drawable/ic_favorite_border" />

        <Space
            android:id="@+id/space_pizzaItem"
            android:layout_width="50dp"
            android:layout_height="84dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pizzaInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pizzaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Name"
            android:textColor="#000000"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/pizzaSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textColor="#3E3C3C" />

        <TextView
            android:id="@+id/pizzaPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#3E3C3C" />

        <TextView
            android:id="@+id/pizzaDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#3E3C3C" />
    </LinearLayout>

    <Button
        android:id="@+id/orderButton"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:background="@drawable/green_button"
        android:text="ORDER NOW"
        android:textColor="@color/white"
        android:textSize="10sp" />
</LinearLayout>
